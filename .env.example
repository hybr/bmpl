# V4L Environment Configuration Example
# Copy this file to .env and update with your values

# API Configuration
VITE_AUTH_API_URL=https://api.v4l.app/api/auth

# CouchDB Configuration
VITE_COUCHDB_URL=https://db.v4l.app
VITE_COUCHDB_USE_SSL=true

# App Configuration
VITE_APP_URL=https://v4l.app

# Feature Flags
VITE_ENABLE_BIOMETRIC=false
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# Performance Configuration
VITE_SYNC_INTERVAL_MS=60000

# Database Configuration
VITE_DB_LAZY_DESTROY_HOURS=24

# Analytics (optional)
# VITE_ANALYTICS_ID=your-analytics-id

# Development
# Set to false in production
VITE_DEBUG=false
